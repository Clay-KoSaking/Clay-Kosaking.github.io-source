// note blocks
.admonition {
  margin: 1.5em 0;
  padding: .6rem;
  overflow: hidden;
  font-size: 1rem;
  font-family: Ubuntu, Roboto, 'Open Sans', 'Microsoft YaHei', sans-serif !important;
  page-break-inside: avoid;
  border-left: .3rem solid #42b983;
  border-radius: .3rem;
  box-shadow: 0 0.1rem 0.4rem rgba(0,0,0,.05), 0 0 0.05rem rgba(0,0,0,.1);
  background-color: rgba(250, 250, 250, 0.6);
}

.admonition-title {
  display: flex;
  align-items: center;
  position: relative;
  margin: -.6rem -.6rem .8em -.6rem !important;
  padding: .4rem .6rem .4rem 2rem;
  font-weight: 700 !important;
  font-family: Ubuntu, Roboto, 'Open Sans', 'Microsoft YaHei', sans-serif !important;
  background-color: rgba(66, 185, 131, 0.3);
}

.admonition-title::before {
  content: ' ';
  position: absolute;
  left: .6rem;
  width: 1em;
  height: 1em;
  background-color: #42b983;
  border-radius: 50%;
}

.info > .admonition-title, .todo > .admonition-title {
  background-color: rgba(0, 184, 212, 0.3);
}

.warning > .admonition-title, .attention > .admonition-title, .caution > .admonition-title {
  background-color: rgba(255, 145, 0, 0.3);
}

.failure > .admonition-title, .missing > .admonition-title, .fail > .admonition-title, .error > .admonition-title {
  background-color: rgba(255, 82, 82, 0.3);
}

.primary > .admonition-title {
  background-color: rgba(108, 68, 196, 0.3);
}

.admonition.info, .admonition.todo {
  border-color: #00b8d4;
}

.admonition.warning, .admonition.attention, .admonition.caution {
  border-color: #ff9100;
}

.admonition.failure, .admonition.missing, .admonition.fail, .admonition.error {
  border-color: #ff5252;
}

.admonition.primary {
  border-color: #6c44c4;
}

.info > .admonition-title::before, .todo > .admonition-title::before {
  background-color: #00b8d4;
  border-radius: 50%;
}

.warning > .admonition-title::before, .attention > .admonition-title::before, .caution > .admonition-title::before {
  background-color: #ff9100;
  border-radius: 50%;
}

.failure > .admonition-title::before, .missing > .admonition-title::before, .fail > .admonition-title::before, .error > .admonition-title::before {
  background-color: #ff5252;
  border-radius: 50%;
}

.primary > .admonition-title::before {
  background-color: #6c44c4;
  border-radius: 50%;
}

.admonition > :last-child {
  margin-bottom: 0 !important;
}

// navbar
.navbar {
  background-color: rgba(255, 255, 255, 0.5);
  color: #000;
  backdrop-filter: blur(5px);
  -webkit-backdrop-filter: blur(5px);
  border: none;
  box-shadow: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1;
}

.navbar-brand,
.navbar-menu {
  background-color: transparent;
  margin: 0;
  padding: 0;
}

.navbar .navbar-item {
  color: #000;

  &:hover,
  &:focus {
    color: #333;
    background-color: rgba(255, 255, 255, 0.3);
  }
}

// footer
.footer
  background-color: rgba(255, 255, 255, 0.5)
  backdrop-filter: blur(5px)
  -webkit-backdrop-filter: blur(5px)
  position: relative
  z-index: 0
  color: #000

  a
    color: #000
    &:hover
      color: #333

.card
  background-color: rgba(255, 255, 255, 0.7)
  color: #000
  position: relative
  z-index: 1

  a
    color: #000
    text-decoration: none
    &:hover
      color: #333

  .title
    color: #000

hr
  // border: none !important
  // height: 1px !important
  background-color: #c0c0c0 !important
  // margin: 1rem 0 !important

.widget-toc
  max-height: calc(100vh - 22px)
  overflow-y: auto
  position: relative

.is-sticky
  position: sticky
  top: 20px
  z-index: 1000

.card.widget-toc
  overflow: visible

.post-navigation
  a.article-nav-prev,
  a.article-nav-next
    color: #ffffff !important

  i.fas
    color: #ffffff !important

table
  border-color: #666 !important

th, td
  border-color: #666 !important

.timeline .media:last-child::after
  width: 0.75rem
  top: calc(1rem + 1.5 * 0.85rem / 2 + 0.75rem / 2)
  bottom: 0
  background: transparent !important